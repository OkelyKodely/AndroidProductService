<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PActivity"
    tools:showIn="@layout/activity_p">

    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>

    <TextView
        android:id="@+id/sdfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="product name:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="176dp"
        android:text="stock qty:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="227dp"
        android:text="category:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="283dp"
        android:text="desc:" />

    <Button
        android:id="@+id/updaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_View"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="122dp"
        android:text="Update" />

    <ImageView
        android:id="@+id/img_View"
        android:layout_width="143dp"
        android:layout_height="108dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="-233dp" />

    <MultiAutoCompleteTextView
        android:id="@+id/ds_c"
        android:layout_width="197dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="47dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/sdfa"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/prc_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="2dp"
        android:text="price:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="76dp"
        android:text="product id:" />

    <EditText
        android:id="@+id/e_Name"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/sdfa"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/e_Id"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/e_Name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/prce_2"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/e_Name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/qtt_y"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/e_Name"
        android:layout_marginBottom="-212dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <Spinner
        android:id="@+id/ctt_e"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_below="@id/qtt_y"
        android:layout_alignStart="@+id/updaButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="224dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/delBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/updaButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Delete" />

</RelativeLayout>