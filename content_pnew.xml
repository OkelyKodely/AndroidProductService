<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PNewActivity"
    tools:showIn="@layout/activity_pnew">

    <TextView
        android:id="@+id/sdfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="product name:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="176dp"
        android:text="stock qty:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="212dp"
        android:text="category:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="251dp"
        android:text="desc:" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="146dp"
        android:layout_height="118dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="-238dp"
        android:background="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/insrtButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="122dp"
        android:text="Insert" />

    <MultiAutoCompleteTextView
        android:id="@+id/dsc"
        android:layout_width="197dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/sdfa"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/prce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="2dp"
        android:text="price:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="76dp"
        android:text="product id:" />

    <EditText
        android:id="@+id/e_Name"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/sdfa"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/eId"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/e_Name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/prce2"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/e_Name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/qtty"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/e_Name"
        android:layout_marginBottom="-212dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/ctte"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/qtty"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:textSize="8sp" />

</RelativeLayout>